{{!<default}}
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1 class="text-center border">Meet the Trustees</h1>
		</div>
	</div>
	<div class="row">
	{{#each trustees}}
		<div class="col-md-6">
			<h3>{{name.first}}  {{name.last}}{{#if position}}, {{position}}{{/if}}</h3>
			{{#if picture.url}}
				<img src="{{picture.secure_url}}" class="img-rounded img-responsive pull-left img-padded" style="height: 200px">
			{{/if}}
			{{{description.html}}}
		</div>
	{{/each}}
	</div>
</div>
